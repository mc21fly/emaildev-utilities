{
    "name": "emaildev-utilities",
    "displayName": "EmailDev Utilities",
    "description": "A set of utilities to speed up email development in VS Code.",
    "version": "1.6.4",
    "publisher": "mc21fly",
    "license": "MIT",
    "icon": "assets/icon.png",
    "homepage": "https://github.com/mc21fly/emaildev-utilities",
    "repository": {
        "type": "git",
        "url": "https://github.com/mc21fly/emaildev-utilities"
    },
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "keywords": [
        "email",
        "development",
        "html",
        "highlight",
        "emaildev"
    ],
    "contributes": {
        "commands": [
            {
                "command": "emaildev-utilities.extension",
                "category": "EDU",
                "title": "Enable extension"
            },
            {
                "command": "emaildev-utilities.tables",
                "category": "EDU",
                "title": "Highlight tables without needed attributes"
            },
            {
                "command": "emaildev-utilities.styles",
                "category": "EDU",
                "title": "Highlight styles with font-size and line-height"
            },
            {
                "command": "emaildev-utilities.imgs",
                "category": "EDU",
                "title": "Highlight imgs without alt tags"
            },
            {
                "command": "emaildev-utilities.alts",
                "category": "EDU",
                "title": "Highlight alt tags"
            },
            {
                "command": "emaildev-utilities.replaceLineHeight",
                "category": "EDU",
                "title": "Replace line-height in px"
            },
            {
                "command": "emaildev-utilities.replaceAttributeValue",
                "category": "EDU",
                "title": "Replace href, alt or src attribute value"
            },
            {
                "command": "emaildev-utilities.spanSelection",
                "category": "EDU",
                "title": "Wrap selection with <span>"
            },
            {
                "command": "emaildev-utilities.supSelection",
                "category": "EDU",
                "title": "Wrap selection with <sup>"
            },
            {
                "command": "emaildev-utilities.strongSelection",
                "category": "EDU",
                "title": "Wrap selection with <strong>"
            },
            {
                "command": "emaildev-utilities.aSelection",
                "category": "EDU",
                "title": "Wrap selection with <a>"
            },
            {
                "command": "emaildev-utilities.iSelection",
                "category": "EDU",
                "title": "Wrap selection with <i>"
            },
            {
                "command": "emaildev-utilities.zwjSelection",
                "category": "EDU",
                "title": "Insert &#8205; between characters in selection"
            },
            {
                "command": "emaildev-utilities.copyAndCompress",
                "category": "EDU",
                "title": "Copy and Compress Selection"
            }
        ],
        "keybindings": [
            {
                "command": "emaildev-utilities.replaceAttributeValue",
                "key": "alt+f2",
                "mac": "alt+f2"
            },
            {
                "command": "emaildev-utilities.spanSelection",
                "key": "ctrl+w",
                "mac": "cmd+w"
            },
            {
                "command": "emaildev-utilities.supSelection",
                "key": "ctrl+e",
                "mac": "cmd+e"
            },
            {
                "command": "emaildev-utilities.strongSelection",
                "key": "ctrl+alt+q",
                "mac": "cmd+alt+q"
            },
            {
                "command": "emaildev-utilities.aSelection",
                "key": "ctrl+alt+r",
                "mac": "cmd+alt+r"
            },
            {
                "command": "emaildev-utilities.iSelection",
                "key": "ctrl+alt+e",
                "mac": "cmd+alt+e"
            },
            {
                "command": "emaildev-utilities.zwjSelection",
                "key": "ctrl+alt+w",
                "mac": "cmd+alt+w"
            },
            {
                "command": "emaildev-utilities.copyAndCompress",
                "key": "alt+q",
                "when": "editorTextFocus && editorHasSelection"
            }
        ],
        "configuration": {
            "title": "EmailDev Utilities",
            "properties": {
                "emaildev-utilities.isExtensionEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable extension"
                },
                "emaildev-utilities.isTablesEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable table tracking"
                },
                "emaildev-utilities.isStylesEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable style tracking"
                },
                "emaildev-utilities.isImgsEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable image tracking"
                },
                "emaildev-utilities.isAltsEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable alt tracking"
                },
                "emaildev-utilities.tablesDecoration": {
                    "type": "object",
                    "default": {
                        "backgroundColor": "rgba(255, 255, 0, 0.1)",
                        "border": "1px dotted rgba(255, 255, 0, 1)",
                        "overviewRulerColor": "rgba(255, 255, 0, 0.5)"
                    },
                    "description": "Customize TABLES highlight colors"
                },
                "emaildev-utilities.stylesDecoration": {
                    "type": "object",
                    "default": {
                        "backgroundColor": "rgba(255, 0, 0, 0.1)",
                        "border": "1px dotted rgba(255, 0, 0, 1)",
                        "overviewRulerColor": "rgba(255, 0, 0, 0.5)"
                    },
                    "description": "Customize STYLES highlight colors"
                },
                "emaildev-utilities.altsDecoration": {
                    "type": "object",
                    "default": {
                        "backgroundColor": "rgba(0, 255, 0, 0.1)",
                        "border": "1px dotted rgba(0, 255, 0, 1)",
                        "overviewRulerColor": "rgba(0, 255, 0, 0.5)"
                    },
                    "description": "Customize ALT highlight colors"
                },
                "emaildev-utilities.imgsDecoration": {
                    "type": "object",
                    "default": {
                        "backgroundColor": "rgba(0, 0, 255, 0.1)",
                        "border": "1px dotted rgba(0, 0, 255, 1)",
                        "overviewRulerColor": "rgba(0, 0, 255, 0.5)"
                    },
                    "description": "Customize IMG highlight colors"
                },
                "emaildev-utilities.exceptions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "0, 0",
                        "18, 48"
                    ],
                    "markdownDescription": "Exceptions for replacing line-height and highlighting styles. Use format: `font-size px, line-height px`"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.65.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "eslint": "^8.9.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.1",
        "typescript": "^4.5.5",
        "@vscode/test-electron": "^2.1.2"
    }
}
